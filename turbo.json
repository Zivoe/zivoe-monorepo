{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "DATABASE_URI",
        "MAINNET_ALCHEMY_API_KEY",
        "SEPOLIA_ALCHEMY_API_KEY",
        "NEXT_PUBLIC_MAINNET_ALCHEMY_API_KEY",
        "NEXT_PUBLIC_SEPOLIA_ALCHEMY_API_KEY",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY",
        "PONDER_MAINNET_DATABASE_URL",
        "PONDER_SEPOLIA_DATABASE_URL",
        "BEEHIIV_PUBLICATION_ID",
        "BEEHIIV_API_KEY",
        "NETWORK",
        "TURNSTILE_SECRET_KEY",
        "NEXT_PUBLIC_TURNSTILE_SITE_KEY",
        "NEXT_PUBLIC_ENV",
        "PONDER_MAINNET_DATABASE_URL",
        "PONDER_SEPOLIA_DATABASE_URL",
        "NEXT_PUBLIC_DYNAMIC_ENV_ID",
        "NEXT_PUBLIC_NETWORK",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "NEXT_PUBLIC_ZIVOE_ANALYTICS_URL",
        "NEXT_PUBLIC_ENV",
        "LANDING_PAGE_URL",
        "LANDING_PAGE_REVALIDATE_API_KEY",
        "REVALIDATE_API_KEY"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
